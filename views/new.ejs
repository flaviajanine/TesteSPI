                                <div id="content"></div>
                                <p><%= color1 %></p>
                                <p><%= color2 %></p>
                                <div id="txt">Color test</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper -->
            </div>
            <!-- wrapper -->
        </div>
        <!-- container-full -->
        <footer class="footer">
            <div class="container">
                <button id="back" onclick="location.href='index.html'">Back</button>
                <button id="create" onclick="getJSON()">Display Texts</button>
            </div>
            </div>
        </footer>


